<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/avatarImageView"
        android:layout_width="52dp"
        android:layout_height="85dp"
        app:srcCompat="@mipmap/ic_launcher_round"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="GEORGI SOTIROV HRISTOV"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="16dp"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="NEKAF PICH"
        tools:layout_editor_absoluteY="33dp"
        app:layout_constraintRight_toRightOf="@+id/nameTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView" />

    <TextView
        android:id="@+id/phoneTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="1029039847"
        tools:layout_editor_absoluteY="50dp"
        tools:layout_editor_absoluteX="68dp"
        android:layout_below="@+id/titleTextView"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView" />

    <TextView
        android:id="@+id/skypeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="SKYPE"
        tools:layout_editor_absoluteY="67dp"
        tools:layout_editor_absoluteX="68dp"
        android:layout_below="@+id/phoneTextView"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ABV@ABV.bg"
        tools:layout_editor_absoluteY="84dp"
        tools:layout_editor_absoluteX="68dp"
        android:layout_below="@+id/skypeTextView"
        android:layout_toRightOf="@+id/avatarImageView"
        android:layout_toEndOf="@+id/avatarImageView" />

</RelativeLayout>